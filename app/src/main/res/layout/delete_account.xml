<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".DeleteAccount">
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Are you sure you want to \ndelete your account?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:text="If you delete your account:"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black">
    </TextView>
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:textColor="@color/black"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:text="You will lose all data associated with the provided name and email address.">
    </TextView>

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:textColor="@color/black"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:text="You will be logged out immediately.">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text4"
        android:textColor="#E10A0A"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:text="WARNING!! THIS CAN'T BE UNDONE. CLICK YES! TO DELETE.">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>